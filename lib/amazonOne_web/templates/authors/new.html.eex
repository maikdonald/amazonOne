 <div class="form-group">
	<%= form_for @changeset, Routes.authors_path(@conn, :create), fn f -> %>
	  <%= if @changeset.action do %>
	    <div class="alert alert-danger">
	      <p>There are some errors</p>
	    </div>
	  <% end %>
	  
	  <label>
	    First Name: <%= text_input f, :firstname %>
	  </label>

	  <label>
	    Last Name: <%= text_input f, :lastname %>
	  </label>

	  <label>
	    ID: <%= text_input f, :uuid %>
	  </label>

	  <%= submit "Submit" %>
	<% end %>
</div>